@model IEnumerable<Service>

@{
	ViewData["Title"] = "Services";
}


<h2>Group: @ViewBag.GroupName</h2>

<table class="table">

	<thead>
		<tr>
			<th>Name</th>
			<th>Price</th>
			@if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
			{
				<th>Edit</th>
				<th>Delete</th>
			}
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>

				<td>@item.Price</td>
				@if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
				{
					<td><a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a></td>
					<td>@await Component.InvokeAsync("Delete", item.Id)</td>
				}
			</tr>
		}
	</tbody>
</table>
