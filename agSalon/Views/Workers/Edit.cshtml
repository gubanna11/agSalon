@model WorkerVM

<form asp-action="Edit">
	<div style="display:flex">
		<div>
			<input type="hidden" asp-for="Id" />
			<div>
				<label asp-for="Name"></label>
				<input asp-for="Name" />
				<span asp-validation-for="Name"></span>
			</div>
			<div>
				<label asp-for="Surname"></label>
				<input asp-for="Surname" />
				<span asp-validation-for="Surname"></span>
			</div>
			<div>
				<label asp-for="DateBirth"></label>
				<input id="date" asp-for="DateBirth" type="date" value="@Model.DateBirth.ToString("yyyy-MM-dd")" />
				<span asp-validation-for="DateBirth"></span>
			</div>
			<div>
				<label asp-for="Phone"></label>
				<input type="tel" asp-for="Phone" />
				<span asp-validation-for="Phone"></span>
			</div>
			<div>
				<label asp-for="Address"></label>
				<input asp-for="Address" />
				<span asp-validation-for="Address"></span>
			</div>
			<div>
				<label asp-for="EmailAddress"></label>
				<input type="email" asp-for="EmailAddress" />
				<span asp-validation-for="EmailAddress"></span>
			</div>
			<div>
				<label asp-for="Gender"></label>
				<select asp-for="Gender">
					<option>@Gender.Female</option>
					<option>@Gender.Male</option>
				</select>
			</div>
			<div>
				<label asp-for="GroupsIds"></label>
				<select multiple asp-for="GroupsIds" asp-items="ViewBag.Groups"></select>
				<span asp-validation-for="GroupsIds"></span>
			</div>
		</div>

		<div>
			@{
				for (int i = 0; i < ViewBag.Days.Count; i++)
				{
					<div>
						<input hidden asp-for="@Model.Schedules[i].WorkerId" value="@Model.Id" />
						<input hidden asp-for="@Model.Schedules[i].Day" value="@ViewBag.Days[i]" />
						<p>@ViewBag.Days[i]</p>
						<input type="time" asp-for="@Model.Schedules[i].Start" />
						<input type="time" asp-for="@Model.Schedules[i].End" />
					</div>
					
				}
			}
		</div>
	</div>

	<div>
		<button type="submit">Save</button>
	</div>
</form>